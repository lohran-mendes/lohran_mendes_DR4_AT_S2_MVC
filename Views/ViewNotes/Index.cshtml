@model ViewNotesModel

@{
    ViewData["Title"] = "View Notes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Criar anotação</h2>
<form method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="Anotacao.Titulo">Titulo</label>
        <input asp-for="Anotacao.Titulo" class="form-control" type="text"/>
        <span asp-validation-for="Anotacao.Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Anotacao.Descricao">Anotação</label>
        <input asp-for="Anotacao.Descricao" class="form-control" type="text"/>
        <span asp-validation-for="Anotacao.Descricao" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Salvar</button>
</form>


